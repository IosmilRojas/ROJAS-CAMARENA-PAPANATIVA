    <script>
    (function () {
        // Cacheados y utilidades
        const navbar = document.querySelector('.navbar');
        const stats = Array.from(document.querySelectorAll('.stat-number'));

        // Smooth scroll usando event delegation
        document.addEventListener('click', function (e) {
            const a = e.target.closest && e.target.closest('a[href^="#"]');
            if (!a) return;
            const target = document.querySelector(a.getAttribute('href'));
            if (target) {
                e.preventDefault();
                target.scrollIntoView({ behavior: 'smooth', block: 'start' });
            }
        });

        // Animaci贸n de n煤meros con requestAnimationFrame
        function animateNumber(el, duration = 1400) {
            const target = parseFloat(el.dataset.target || '0');
            const isDecimal = target % 1 !== 0;
            const start = performance.now();
            const from = 0;
            function step(ts) {
                const progress = Math.min((ts - start) / duration, 1);
                const value = from + (target - from) * progress;
                el.textContent = isDecimal ? value.toFixed(1) : Math.floor(value);
                if (progress < 1) requestAnimationFrame(step);
            }
            requestAnimationFrame(step);
        }

        // Observer para stats (solo dispara una vez por elemento)
        if (stats.length) {
            const obs = new IntersectionObserver((entries, observer) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        animateNumber(entry.target);
                        observer.unobserve(entry.target);
                    }
                });
            }, { threshold: 0.5 });

            stats.forEach(s => obs.observe(s));
        }

        // Navbar background toggle using RAF to throttle
        let ticking = false;
        window.addEventListener('scroll', function () {
            if (!ticking) {
                window.requestAnimationFrame(function () {
                    if (window.scrollY > 100) {
                        navbar.style.background = 'rgba(255,255,255,0.98)';
                    } else {
                        navbar.style.background = 'rgba(255,255,255,0.95)';
                    }
                    ticking = false;
                });
                ticking = true;
            }
        });
    })();
    </script>
