<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Error - PapaIA</title>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    
    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }
        
        .card {
            border-radius: 15px;
            backdrop-filter: blur(10px);
            background-color: rgba(255, 255, 255, 0.95);
        }
        
        .display-1 {
            font-size: 6rem;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.1);
        }
    </style>
</head>
<body class="bg-light">
    <div class="container">
        <div class="row justify-content-center min-vh-100 align-items-center">
            <div class="col-md-6 col-lg-5">
                <div class="card border-0 shadow-lg">
                    <div class="card-body text-center py-5">
                        <!-- Error Icon -->
                        <div class="mb-4">
                            <% if (typeof codigo !== 'undefined' && codigo === 404) { %>
                                <i class="fas fa-search fa-4x text-warning mb-3"></i>
                            <% } else { %>
                                <i class="fas fa-exclamation-triangle fa-4x text-danger mb-3"></i>
                            <% } %>
                        </div>
                        
                        <!-- Error Code -->
                        <h1 class="display-1 fw-bold text-muted mb-3"><%= codigo || '500' %></h1>
                        
                        <!-- Error Title -->
                        <h3 class="mb-3">
                            <% if (typeof codigo !== 'undefined' && codigo === 404) { %>
                                Página No Encontrada
                            <% } else { %>
                                Error del Servidor
                            <% } %>
                        </h3>
                        
                        <!-- Error Message -->
                        <p class="text-muted mb-4 lead">
                            <%= mensaje || 'Ha ocurrido un error inesperado' %>
                        </p>
                        
                        <!-- Error Details (if available) -->
                        <% if (typeof detalles !== 'undefined' && detalles) { %>
                            <div class="alert alert-light mb-4">
                                <small class="text-muted"><%= detalles %></small>
                            </div>
                        <% } %>
                        
                        <!-- Action Buttons -->
                        <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                            <% if (typeof usuario !== 'undefined' && usuario) { %>
                                <!-- Usuario autenticado -->
                                <a href="/" class="btn btn-success me-md-2">
                                    <i class="fas fa-home me-1"></i>
                                    Ir al Inicio
                                </a>
                                <a href="/dashboard" class="btn btn-outline-primary me-md-2">
                                    <i class="fas fa-tachometer-alt me-1"></i>
                                    Dashboard
                                </a>
                            <% } else { %>
                                <!-- Usuario no autenticado -->
                                <a href="/login" class="btn btn-success me-md-2">
                                    <i class="fas fa-sign-in-alt me-1"></i>
                                    Iniciar Sesión
                                </a>
                                <button onclick="history.back()" class="btn btn-outline-secondary">
                                    <i class="fas fa-arrow-left me-1"></i>
                                    Volver Atrás
                                </button>
                            <% } %>
                        </div>
                        
                        <!-- Additional Help -->
                        <div class="mt-4 pt-3 border-top">
                            <p class="text-muted small mb-2">
                                ¿Necesitas ayuda adicional?
                            </p>
                            <div class="d-flex justify-content-center gap-3">
                                <button onclick="reportarError()" class="btn btn-link btn-sm">
                                    <i class="fas fa-bug me-1"></i>
                                    Reportar Error
                                </button>
                                <a href="mailto:soporte@papaclasificador.com" class="btn btn-link btn-sm">
                                    <i class="fas fa-envelope me-1"></i>
                                    Contactar Soporte
                                </a>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Footer -->
                    <div class="card-footer bg-light text-center border-0">
                        <small class="text-muted">
                            <i class="fas fa-seedling me-1"></i>
                            Sistema de Clasificación de Papas IA
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    
    <script>
        function reportarError() {
            const errorInfo = {
                codigo: '<%= codigo || "500" %>',
                mensaje: '<%= mensaje || "Error desconocido" %>',
                url: window.location.href,
                timestamp: new Date().toISOString()
            };
            
            // Aquí podrías enviar el error a un servicio de logging
            console.log('Error reportado:', errorInfo);
            
            alert('Error reportado. Nuestro equipo técnico será notificado.');
        }
    </script>
</body>
</html>